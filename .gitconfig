    email = neo.cheng@vertexcom.com
    name = neo.cheng

[color]
    diff = auto
    status = auto
    ui = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red # deletions
    new = green # additions

[alias]
	pm= "!git push -u origin master"
	c = commit -m
	a = add
	cob = checkout -b
	co = checkout
	br = branch
	ci = commit
	st = status
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	add-del = !git rm $(git ls-files --deleted)
	add-mod = !git add $(git ls-files --modified)
        rev-mod = !git co $(git ls-files --modified)
	adog = log --all --decorate --oneline --graph
[push]
    default = simple
